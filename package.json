{
  "name": "new-train-tracker",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "postinstall": "cd server && pipenv install",
    "build-elm": "cd elm && elm make src/Main.elm --output ../js/elm.js",
    "build-elm-debug": "cd elm && elm make src/Main.elm --output ../js/elm.js --debug",
    "watch-elm": "npm run build-elm-debug; chokidar elm/src/ -c 'npm run build-elm-debug'",
    "start-python": "cd server && pipenv run python3 application.py",
    "start": "concurrently npm:start-python npm:watch-elm",
    "format": "cd elm/ && elm-format . --yes",
    "test-elm": "cd elm && elm-format . --validate && elm-test",
    "test": "npm run test-elm"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/transitmatters/new-train-tracker.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/transitmatters/new-train-tracker/issues"
  },
  "homepage": "https://github.com/transitmatters/new-train-tracker#readme",
  "dependencies": {
    "elm": "^0.19.1-3",
    "elm-format": "^0.8.2"
  },
  "devDependencies": {
    "chokidar-cli": "^2.1.0",
    "concurrently": "^5.0.2",
    "elm-test": "^0.19.1"
  }
}
